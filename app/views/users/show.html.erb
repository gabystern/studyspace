<div class='row center-align'><h1><%= @user.username %>'s Study Page!</h1></div>

<div class='row'>
  <div class='col s12 center-align'><%=@user.bio%></div>
  <div class='col s12 center-align'>
    <%if current_user == @user%>
      <%=link_to "Create New Study Room", new_study_room_path, class: "waves-effect waves-light btn"%>
    <%end%>
  </div>
</div>

<div class='row'>

  <div class='col s12 m4 center-align'><h4 class="center-align">Hosting</h4></div>
  <div class='col s12 m4 center-align'><h4>Map</h4></div>
  <div class='col s12 m4 center-align'><h4>Locations</h4></div>

</div>
<div class='row'>
  <div class='col s12 m4 card-panel grey lighten-2 flex'>
    <%if @user.all_owned.present?%>
      <%@user.all_owned.each do |room|%>
        <%=link_to study_room_path(room.slug) do%>
          <div class=" grey lighten-2 hoverable"><h5><%="#{room.name}"%></h5>
          <%="#{room.location.name}, #{room.location.address}"%></div>
        <%end%>
      <%end%>
    <%else%>
      <p class="grey-text flow-text"><i>No hosted rooms</i></p>
    <%end%>
  </div>
  <div class="col s12 m4 center-align"><img class="responsive-img center" src=<%="https://maps.googleapis.com/maps/api/staticmap?size=300x400&scale=3"+Location.coord_output(@user.all_locations)%>></div>
  <div class="col s12 m4 card-panel grey lighten-2">

    <%@user.all_locations.each do |location|%>
      <%=link_to location_path(location.slug) do%>
        <div class=" grey lighten-2 hoverable"><h5><%="#{location.name}"%></h5>
        <%="#{location.address}"%></div><br>
      <%end%>
    <%end%>
  </div>
</div>

<div class='row'>
<div class='col s12 m4 center-align'><h4>Attending</h4></div>
<div class='col s12 m2 center-align'></div>
<div class='col s12 m6 center-align'><h4>Categories</h4></div>
</div>
<div class='row'>
  <div class='col s12 m4 card-panel grey lighten-2'>
    <%if @user.all_unowned.present?%>

        <%@user.all_unowned.each do |room|%>
          <%=link_to study_room_path(room.slug) do%>
            <div class=" grey lighten-2 hoverable"><h5><%="#{room.name}"%></h5>
            <%="#{room.location.name} - #{room.location.address}"%></div><br>
          <%end%>
        <%end%>
        

    <%end%>
  </div>

    <div class='center-align'>

      <%if @user.all_categories.present?%>


          <%@user.all_categories.each do |cat|%>

            <div><h5><%=link_to "#{cat.name}", category_path(cat.slug), class: "col s12 m3 card-panel grey lighten-2 hoverable right center-align"%></h5></div>

          <%end%>

      <%end%>

    </div>

</div>

<%= link_to "Back to all", study_rooms_path %>
