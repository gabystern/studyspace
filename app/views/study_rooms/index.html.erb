<div class="row">
  <div class="col s12 center-align">
    <h1> Available Study Rooms </h1>
  </div>
</div>

<div class="row center-align">
  <div class="col s12">
    <%=link_to "Create New Study Room", new_study_room_path, class: "waves-effect waves-light btn"%>
  </div>
</div>
