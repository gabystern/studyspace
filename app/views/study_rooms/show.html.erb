
<div class="container">

  <div class="row">

    <div class="col s8">

    <h4> <%= @study_room.name %> </h4>
    Category: <%= link_to @study_room.category.name, category_path(@study_room.category.slug)  %>
    Location: <%= link_to @study_room.location.name, location_path(@study_room.location.slug) %>
    Starting Time: <%= format_time(@study_room.start_time) %>
    Duration: <%= (@study_room.end_time.to_time - @study_room.start_time.to_time) / 3600 %> hours 

    </div>



    <div class="col s4">

    </div>



  </div>

  <div class="row"> <!-- Comments -->

    <div class="col s6">
      <%=render 'comment_box'%>
    </div>

    <div class="col s6">

    </div>

  </div>
</div>








    <h3>Attendees</h3>


<div class="col s8">
  <div class="card">
    <div class="card-image-medium">
      <img class="responsive-img center" src=<%="https://maps.googleapis.com/maps/api/staticmap?size=400x200&zoom=15&scale=2"+Location.coord_output(@study_room.location)%>>
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <ul>
          <li> <p> <b> Hosts: </b>
            <%if !@study_room.users.blank?%>
              <%@study_room.user_study_rooms.each do |usr|%>

                <%if usr.owner == true%>
                  <span><%=link_to usr.user.username, user_path(usr.user.slug)%></span>
                <%end%>
              <%end%>
            <%else%>
              <h3>No host currently</h3>
            <%end%></p> </li>
        </ul>
      </div>
    </div>
  </div>
</div>

        <div class="col s12 m4">
          <div class="card-panel grey lighten-2">
            <div id="attendees">
              <%if !@study_room.users.blank?%>
                <%@study_room.users.each do |user|%>
                  <span><%=link_to user.username, user_path(user.slug)%></span><br>
                <%end%>
              <%else%>
                <h3>No one currently attending</h3>
              <%end%>
            </div>
          </div>
        </div>

<div>
  <div id="join_or_leave" class="center-align">
    <% if current_user.study_rooms.include?(@study_room)%>
      <%=render 'leave_button'%>
    <% else %>
      <%=render 'join_button'%>
    <% end %>
    <br>
    <%if @study_room.owners.include?(current_user)%>


        <div id="edit">
          <a class="waves-effect waves-light btn" href=<%="/study_rooms/"+@study_room.slug+"/edit"%>>Edit</a>
        </div>


    <%end%>
  </div>

</div>

<br><br>

<div class="row center-align">
  <div class="col s3">
    <%=link_to "Back to Study Rooms", study_rooms_path%>
  </div>
  <div class="col s3">
    <%=link_to "See all Users", users_path%>
  </div>
  <div class="col s3">
    <%=link_to "See all Locations", locations_path%>
  </div>
  <div class="col s3">
    <%=link_to "See all Categories", categories_path%>
  </div>
</div>
