<div class="row center-align">
  <div class="col s12 m8">
    <h3><%= @study_room.name %></h3>
  </div>
  <div class="col s12 m4">
    <h3>Attendees</h3>
  </div>
</div>

<div class="col s8">
  <div class="card">
    <div class="card-image-medium">
      <img class="responsive-img center" src=<%="https://maps.googleapis.com/maps/api/staticmap?size=400x200&zoom=15&scale=2"+Location.coord_output(@study_room.location)%>>
    </div>
    <div class="card-stacked">
      <div class="card-content">
         <p>Category: <%= link_to @study_room.category.name, category_path(@study_room.category.slug)  %> </p>
         <p>Location: <%= link_to @study_room.location.name, location_path(@study_room.location.slug)  %> </p>
         <p>Starting Time: <%= @study_room.start_time.strftime("%A, %B %d %I:%M %p")  %> </p>
         <p>Duration: <%= @study_room.end_time.hour -  @study_room.start_time.hour %> hour</p>
         <p>Hosts:
            <%if !@study_room.users.blank?%>
              <%@study_room.user_study_rooms.each do |usr|%>
                <%if usr.owner == true%>
                  <span><%=link_to usr.user.username, user_path(usr.user.slug)%></span>
                <%end%>
              <%end%>
            <%else%> No host currently
            <%end%></p> </li>
      </div>
    </div>
  </div>
</div>

        <div class="col s12 m4">
          <div class="card-panel grey lighten-2">
            <div id="attendees">
              <%if !@study_room.users.blank?%>
                <%@study_room.users.each do |user|%>
                  <span><%=link_to user.username, user_path(user.slug)%></span><br>
                <%end%>
              <%else%>
                <p class='center-align'>No one currently attending</p>
              <%end%>
            </div>
          </div>
        </div>

<div>
  <div id="join_or_leave" class="center-align">
    <% if current_user == nil %>
      <%= redirect_to login_path %>
    <% elsif current_user.study_rooms.include?(@study_room)%>
      <%=render 'leave_button'%>
    <% else %>
      <%=render 'join_button'%>
    <% end %>
    <br>

    <%if @study_room.owners.include?(current_user)%>
        <div id="edit">
          <a class="waves-effect waves-light btn" href=<%="/study_rooms/"+@study_room.slug+"/edit"%>>Edit</a>
        </div>
    <%end%>
  </div>

<%=render 'comment_box'%>
</div>

<br><br>

<div class="row center-align">
  <div class="col s3">
    <%=link_to "Back to Study Rooms", study_rooms_path%>
  </div>
  <div class="col s3">
    <%=link_to "See all Users", users_path%>
  </div>
  <div class="col s3">
    <%=link_to "See all Locations", locations_path%>
  </div>
  <div class="col s3">
    <%=link_to "See all Categories", categories_path%>
  </div>
</div>
