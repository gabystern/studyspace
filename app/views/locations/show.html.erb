<div class="container">
<div class="row center-align">
  <h1><%= @location.name %></h1>
</div>

<div class="row">
  <div class="col s3">
  </div>
  <div class="col s6">
    <div class="card">
      <div class="card-image-medium">
        <img class="responsive-img center" src=<%="https://maps.googleapis.com/maps/api/staticmap?size=1080x200&zoom=15scale=2"+Location.coord_output(@location)%>>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p>Address: <b><%= @location.address %></b></p>
          <p>Average Rating: 
            <%if !@location.avg_rating.nil?%>
              No rating
            <%else%>
              <b><%= @location.avg_rating%></b>
            <%end%> </p>
          <span class="loc-icons">Wifi: </span>
            <span class="material-icons loc-icons">
              <%if @location.wifi == true%>
                <b class="blue-text">settings_input_antenna</b>
              <%else%>
                <b class="grey-text text-darken-1">portable_wifi_off</b>
              <%end%>
            </span>
          
          <span class="loc-icons">Volume: </span>
            <span class="material-icons">
              <%if @location.volume == '1'%>
                <b class='grey-text'>volume_mute</b>
              <%elsif @location.volume == '2'%>
                <b class='grey-text text-darken-1'>volume_down</b>
              <%else%>
                <b>volume_up</b>
              <%end%>
            </span><b><%=@location.volume%></b>
          
          <span class="loc-icons">Capacity: </span><i class="material-icons loc-icons">
              supervisor_account  
            </i><b><%=@location.capacity%></b> 
            
            
        </div>
      </div>
    </div>
  </div>

  <div class="col s3">

  </div>
</div>


  <div class="row">
    <div class="col s7">
      <h3 class="center-align">Study Rooms</h3>
        <div class="card grey lighten-2">
          <div class="card-content black-text">
            <span class="card-title center-align">Upcoming Study Rooms:</span>
            <ul>
              <% if @location.upcoming.empty? %> No one plans to study here yet. Be the first!
              <% else %>
                <% @location.upcoming.each do |room| %>
                  <li> <%= link_to "#{room.name} - #{room.start_time.strftime("%A, %B %d %I:%M %p")}", study_room_path(room.slug)%> </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="card grey lighten-2">
          <div class="card-content black-text">
            <span class="card-title center-align">Past Study Rooms:</span>
            <ul>
              <% if @location.past.empty? %> No one has previously studied here.
              <% else %>
                <% @location.past.each do |room| %>
                  <li> <%= link_to "#{room.name} - #{room.start_time.strftime("%A, %B %d %I:%M %p")}, study_room_path(room.slug)"%> </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="card grey lighten-2">
          <div class="card-content black-text">
            <span class="card-title center-align">Types Usually Held Here: </span>
              <ul>
                <% if @location.categories.empty? %>
                  None yet...
                <% else %>
                <% @location.categories.each do |category| %>
                <li><%= link_to category.name, category_path(category.slug) %> </li>
              <% end %>
            <% end %>
            </ul>
          </div>
        </div>
      </div>

  <div class="col s5">
    <h3 class="center-align">Social</h3>
    <div class="card grey lighten-2">
      <div class="card-content black-text">
        <span class="card-title center-align">Connect With Others:</span>
          <ul>
          <% if @location.users.empty? %>
              Start the trend and be the first!
            <% else %>
          <% @location.users.each do |user| %>
            <li><%= link_to user.username, user_path(user.slug) %> </li>
          <% end %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
